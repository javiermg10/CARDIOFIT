<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imagendefondo"
    android:id="@+id/ActivityVentanaPerfil"
    tools:context=".VentanaPerfil">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:id="@+id/ll03"
        android:layout_below="@+id/tvtitulo">

        <!--<EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="30"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_white"
            android:id="@+id/etMeterEmail"
            android:hint="@string/MostrarDatos"/>-->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll03"
        android:weightSum="100"
        android:layout_marginTop="20dp"
        android:id="@+id/ll04">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/BotonPerfil"
            android:id="@+id/btnLoad"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:background="@drawable/register_button"
            android:layout_weight="50"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll04"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/rounded_white_listview"
        android:layout_marginTop="20dp"
        android:id="@+id/lvLista"></ListView>


</RelativeLayout>